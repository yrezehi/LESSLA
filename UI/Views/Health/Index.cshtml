@model HealthCheckLogDashboard

@{
    ViewData["Title"] = "Health Page";
}

<div class="w-[100%] h-[100%] p-8 text-white">
    <h2 class="text-2xl font-bold mb-4 uppercase space-crusaders-font">Health Checks</h2>
    <hr class="my-6 bg-gray-400">
    <div class="sm:p-7 p-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 mt-6 border-b border-b-gray-400 pb-6 text-slate-900 uppercase">
            <div class="card bg-white px-2 py-2 m-2 border border-gray-200 rounded-lg hover:bg-transparent/20 hover:text-white hover:shadow-md hover:border-opacity-0 transform hover:-translate-y-1 transition-all duration-200">
                <div class="m-3">
                    <h2 class="text-lg text-left mb-2 font-bold">
                        Applications Registeslate
                    </h2>
                    <div class="flex flex-row justify-between mt-[14px]">
                        <p class="text-3xl font-light font-mono text-gray-700 hover:text-gray-900 transition-all duration-200">@Model.RegistredApplications</p>
                    </div>
                </div>
            </div>
            <div class="card bg-white px-2 py-2 m-2 border border-gray-200 rounded-lg hover:bg-transparent/20 hover:text-white hover:shadow-md hover:border-opacity-0 transform hover:-translate-y-1 transition-all duration-200">
                <div class="m-3">
                    <h2 class="text-lg text-left mb-2 font-bold">
                        Failed Checks Today
                    </h2>
                    <div class="flex flex-row justify-between mt-[14px]">
                        <p class="text-3xl font-light font-mono text-gray-700 hover:text-gray-900 transition-all duration-200">@Model.FailedChecksToday</p>
                    </div>
                </div>
            </div>
            <div class="card bg-white px-2 py-2 m-2 border border-gray-200 rounded-lg hover:bg-transparent/20 hover:text-white hover:shadow-md hover:border-opacity-0 transform hover:-translate-y-1 transition-all duration-200">
                <div class="m-3">
                    <h2 class="text-lg text-left mb-2 font-bold">
                        Downtime
                    </h2>
                    <div class="flex flex-row justify-between mt-[14px]">
                        <p class="text-3xl font-light font-mono text-gray-700 hover:text-gray-900 transition-all duration-200">@(Model.Downtime)m</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="sm:p-7 p-4">
            <div class="flex w-full items-center mb-7">
                <div class="ml-auto text-gray-500 text-xs sm:inline-flex hidden items-center">
                    <span class="mr-3">Page 0 of 0</span>
                    <a href="javascript:void(0)" class="cursor-not-allowed mr-2 inline-flex items-center h-8 w-8 justify-center text-gray-400 rounded-md shadow border border-gray-200 leading-none py-0">
                        <svg class="w-4" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="15 18 9 12 15 6"></polyline>
                        </svg>
                    </a>
                    <a href="javascript:void(0)" class="cursor-not-allowed inline-flex items-center h-8 w-8 justify-center text-gray-400 rounded-md shadow border border-gray-200 leading-none py-0">
                        <svg class="w-4" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="9 18 15 12 9 6"></polyline>
                        </svg>
                    </a>
                </div>
                <div class="ml-6 text-gray-500 text-xs sm:inline-flex hidden items-center">
                    <div class="rounded-md shadow border border-gray-200 py-1 px-4">
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input type="checkbox" value="" class="sr-only peer">
                            <div class="w-8 h-4 rounded-full peer bg-gray-700 peer-focus:ring-4 peer-focus:ring-[#F2F2F2]-800 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.45 after:start-[1px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-4 after:w-4 after:transition-all border-gray-600 peer-checked:bg-gray-400"></div>
                            <span class="ms-3 text-sm font-medium text-gray-900 dark:text-gray-300">LIVE</span>
                        </label>
                    </div>
                </div>
            </div>
            <table class="w-full text-left">
                <thead>
                    <tr class="text-gray-300 uppercase space-crusaders-font">
                        <th class="font-normal px-3 pt-0 pb-3 border-b border-gray-400">Application</th>
                        <th class="font-normal px-3 pt-0 pb-3 border-b border-gray-400">Health</th>
                        <th class="font-normal px-3 pt-0 pb-3 border-b border-gray-400">Duration</th>
                        <th class="font-normal px-3 pt-0 pb-3 border-b border-gray-400">Time</th>
                    </tr>
                </thead>
                <tbody class="text-gray-600">
                    @foreach (var item in Model.Logs.Items)
                    {
                        <tr>
                            <td class="sm:p-3 py-2 px-1 border-b border-gray-200">
                                <div class="flex items-center">
                                    <span class="mr-5 rounded-md roun text-white py-1 px-2">
                                        @item.ApplicationId
                                    </span>
                                </div>
                            </td>
                            <td class="sm:p-3 py-2 px-1 border-b border-gray-200">
                                <div class="flex items-center">
                                    <span class="mr-5 rounded-md roun text-white py-1 px-2">
                                        @item.IsHealthy
                                    </span>
                                </div>
                            </td>
                            <td class="sm:p-3 py-2 px-1 border-b border-gray-200">
                                <div class="flex items-center">
                                    <span class="mr-5 rounded-md roun text-white py-1 px-2">
                                        @item.ExecutionDuration
                                    </span>
                                </div>
                            </td>
                            <td class="sm:p-3 py-2 px-1 border-b border-gray-200">
                                <div class="flex items-center">
                                    <span class="mr-5 rounded-md roun text-white py-1 px-2">
                                        @item.ExecutionTime
                                    </span>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>

    </script>
}