@{
    ViewData["Title"] = "Health Page";
}

<div class="w-[100%] h-[100%] bg-white p-8">
    <h2 class="text-2xl font-bold mb-4">Health Check</h2>
    <hr class="my-6">
    <div class="sm:p-7 p-4">

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 mt-6 border-b pb-6">
            <div class="card bg-blue-100 px-2 py-2 m-2 border border-gray-400 rounded-lg border-blue-600 hover:shadow-md hover:border-opacity-0 transform hover:-translate-y-1 transition-all duration-200">
                <div class="m-3">
                    <h2 class="text-lg text-left mb-2">
                        Applications Registered
                    </h2>
                    <div class="flex flex-row justify-between mt-[14px]">
                        <p class="text-3xl font-light font-mono text-gray-700 hover:text-gray-900 transition-all duration-200">53</p>
                    </div>
                </div>
            </div>
            <div class="card bg-green-100 px-2 py-2 m-2 border border-gray-400 rounded-lg border-green-600 hover:shadow-md hover:border-opacity-0 transform hover:-translate-y-1 transition-all duration-200">
                <div class="m-3">
                    <h2 class="text-lg text-left mb-2">
                        Failed Checks Today
                    </h2>
                    <div class="flex flex-row justify-between mt-[14px]">
                        <p class="text-3xl font-light font-mono text-gray-700 hover:text-gray-900 transition-all duration-200">22</p>
                    </div>
                </div>
            </div>
            <div class="card bg-amber-100 px-2 py-2 m-2 border border-gray-400 rounded-lg border-amber-600 hover:shadow-md hover:border-opacity-0 transform hover:-translate-y-1 transition-all duration-200">
                <div class="m-3">
                    <h2 class="text-lg text-left mb-2">
                        Downtime
                    </h2>
                    <div class="flex flex-row justify-between mt-[14px]">
                        <p class="text-3xl font-light font-mono text-gray-700 hover:text-gray-900 transition-all duration-200">35m</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="sm:p-7 p-4">
            <div class="flex w-full items-center mb-7">
                <button class="cursor-not-allowed inline-flex items-center h-8 pl-2.5 pr-2 rounded-md shadow text-gray-700 border border-gray-200 leading-none py-0">
                    Filter by
                    <svg viewBox="0 0 24 24" class="w-4 ml-1.5 text-gray-400" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="6 9 12 15 18 9"></polyline>
                    </svg>
                </button>
                <div class="ml-auto text-gray-500 text-xs sm:inline-flex hidden items-center">
                    <span class="mr-3">Page 0 of 0</span>
                    <a href="javascript:void(0)" class="cursor-not-allowed mr-2 inline-flex items-center h-8 w-8 justify-center text-gray-400 rounded-md shadow border border-gray-200 leading-none py-0">
                        <svg class="w-4" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="15 18 9 12 15 6"></polyline>
                        </svg>
                    </a>
                    <a href="javascript:void(0)" class="cursor-not-allowed inline-flex items-center h-8 w-8 justify-center text-gray-400 rounded-md shadow border border-gray-200 leading-none py-0">
                        <svg class="w-4" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="9 18 15 12 9 6"></polyline>
                        </svg>
                    </a>
                </div>
            </div>
            <table class="w-full text-left">
                <thead>
                    <tr class="text-gray-400">
                        <th class="font-normal px-3 pt-0 pb-3 border-b border-gray-200">Level</th>
                        <th class="font-normal px-3 pt-0 pb-3 border-b border-gray-200">Application</th>
                        <th class="font-normal px-3 pt-0 pb-3 border-b border-gray-200">Message</th>
                        <th class="font-normal px-3 pt-0 pb-3 border-b border-gray-200 hidden md:table-cell">Time</th>
                    </tr>
                </thead>
                <tbody class="text-gray-600">
                    
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
      
    </script>
}