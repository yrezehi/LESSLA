@model BriefDTO

@{
    ViewData["Title"] = "Home Page";
}

<div class="px-6 py-8">
    <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-3xl p-8 mb-5">
            <h2 class="text-2xl font-bold mb-4">Daily Report</h2>
            <hr class="my-6">
            <div class="grid grid-cols-2 gap-x-20">
                <div>
                    <h2 class="text-2xl font-bold mb-4">Stats</h2>
                    <div class="grid grid-cols-2 gap-4">
                        <div class="col-span-2">
                            <div class="p-4 bg-green-100 rounded-xl">
                                <div class="font-bold text-xl text-gray-800 leading-none">
                                    <p>Good day, Rooster!</p>
                                    <p class="text-xs mt-2 text-gray-600">You have @Model.IssueCount issues on your systems</p>
                                </div>
                                <div class="mt-4">
                                    <button type="button" class="inline-flex items-center justify-center py-2 px-3 rounded-xl bg-white text-gray-800 hover:text-green-500 text-sm font-semibold transition">
                                        Start tracking
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="p-4 bg-[#ffadad] rounded-xl text-gray-800 font-bold">
                            <div class="font-bold text-2xl leading-none">@Model.ErrorCount</div>
                            <div class="mt-2 text-gray-600">ERROR</div>
                        </div>
                        <div class="p-4 bg-yellow-100 rounded-xl text-gray-800 font-bold">
                            <div class="text-2xl leading-none">@Model.WarningCount</div>
                            <div class="mt-2 text-gray-600">WARNINGS</div>
                        </div>
                    </div>
                </div>
                <div>
                    <h2 class="text-2xl font-bold mb-4">Previous Reports</h2>
                    <div class="space-y-4">
                        <div class="p-4 bg-white border rounded-xl text-gray-800 space-y-2 cursor-pointer">
                            <a href="javascript:void(0)" class="font-bold hover:text-yellow-800 hover:underline">Blog and social posts</a>
                            <div class="flex items-center text-sm text-gray-600">
                                <svg width="0.75em" height="0.75em" fill="currentColor" class="text-gray-800 inline align-middle mr-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM10 15a1 1 0 1 1 0-2 1 1 0 0 1 0 2Zm1-4a1 1 0 0 1-2 0V6a1 1 0 0 1 2 0v5Z" />
                                </svg><span class="text-xs">23% More errors than the day before</span>
                            </div>
                        </div>
                        <div class="p-4 bg-white border rounded-xl text-gray-800 space-y-2 cursor-pointer">
                            <a href="javascript:void(0)" class="font-bold hover:text-yellow-800 hover:underline">New campaign review</a>
                            <div class="flex items-center text-sm text-gray-600">
                                <svg width="0.75em" height="0.75em" fill="currentColor" class="text-gray-800 inline align-middle mr-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM10 15a1 1 0 1 1 0-2 1 1 0 0 1 0 2Zm1-4a1 1 0 0 1-2 0V6a1 1 0 0 1 2 0v5Z" />
                                </svg><span class="text-xs">10% Less errors than a week before</span>
                            </div>
                        </div>
                        <div class="p-4 bg-white border rounded-xl text-gray-800 space-y-2 cursor-pointer">
                            <a href="javascript:void(0)" class="font-bold hover:text-yellow-800 hover:underline">Cross-platform and browser QA</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>