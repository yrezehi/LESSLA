{
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": {
      "Default": "Error",
      "Override": {
        "Microsoft": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "restrictedToMinimumLevel": "Error",
        "Args": {
          "connectionString": "Server=localhost,1433;Database=lessla;MultipleActiveResultSets=true;TrustServerCertificate=True;User Id=sa; Password=123456a@;",
          "schemaName": "dbo",
          "tableName": "logs",
          "autoCreateSqlTable": true,
          "columnOptionsSection": {
            "removeStandardColumns": [ "Properties", "MessageTemplate", "Exception" ],
            "customColumns": [
              {
                "ColumnName": "Application",
                "DataType": "varchar",
                "DataLength": -1
              },
              {
                "ColumnName": "Details",
                "DataType": "varchar",
                "DataLength": -1
              },
              {
                "ColumnName": "RequestId",
                "DataType": "varchar",
                "DataLength": -1
              },
              {
                "ColumnName": "RequestPath",
                "DataType": "varchar",
                "DataLength": -1
              },
              {
                "ColumnName": "ConnectionId",
                "DataType": "varchar",
                "DataLength": -1
              }
            ]
          }
        }
      }
    ]
  },
  "SelfLog": "C:\\Users\\Administrator\\Documents\\Projects\\LESSLA\\logs.txt",
  "AllowedHosts": "*"
}
